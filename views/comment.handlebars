<h1>ADD YOUR COMMENT</h1>
<form class="border border-2 border-teal-400 p-4 rounded comment-input" id="new-blog-form" data-id="{{id}}">
    <div class="row mb-2">
        <div class="col-md-8">
            <label for="username" class="block text-sm font-medium leading-6 text-gray-900">Title</label>
            <h2>{{title}}</h2>
            <p>{{content}}</p>
        </div>
    </div>
    <div class="col-span-full">
        <label for="about" class="block text-sm font-medium leading-6 text-gray-900">Comment</label>
        <div class="mt-2">
            <textarea id="add-comment" name="comment" rows="3" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 
            placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 form-input" aria-label="Add your comment"></textarea>
        </div>
        <button type="submit" id="comment" class="btn btn-primary rounded-md bg-teal-500 text-sm font-semibold text-white shadow-sm hover:bg-gray-500 focus-visible:outline 
        focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600">Submit
        </button>
    </div>
</form>


<script src="/js/comments.js"></script>