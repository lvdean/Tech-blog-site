{{#each blogs as |blogPost| }}
  <div class="row mb-4 project">
    <div class="col-md-5">
      <h2>
        <!-- Use the blogPost.id for dynamic links -->
        <a href="/blogs/{{blogPost.id}}">{{blogPost.title}}</a>
      </h2>
      <p>
        <!-- Correct the user name access -->
        Created by {{blogPost.user.name}} on {{format_date blogPost.date_created}}
      </p>
    </div>
    <div class="col-md-7">
      <p>{{blogPost.content}}</p>
    </div>
  </div>
{{/each}}

<div class="col-span-full">
          <label for="about" class="block text-sm font-medium leading-6 text-gray-900">Comment</label>
          <div class="mt-2">
            <textarea id="project-desc" name="project-desc" rows="3" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 form-input"></textarea>
          </div>
  <button type="submit" class=" btn btn-primary rounded-md bg-teal-500  text-sm font-semibold text-white shadow-sm hover:bg-gray-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600">Submit
    </button>
    