<div class="row">
  <div class="col-auto text-3xl text-center justify-center pb-6">
    <h2>Welcome To Your Dashboard {{name}}!</h2>
  </div>
</div>

<!-- Hidden Checkbox to Control Modal -->
<input type="checkbox" id="openModal" class="hidden peer" />

<!-- Modal for blog input -->
<div 
  class="fixed inset-0 z-50 hidden peer-checked:flex items-center justify-center bg-black bg-opacity-50 ">
  <div class="bg-white p-6 rounded-lg shadow-lg w-1/2 max-w-lg">
   <h2 class="font-bold my-4 text-2xl text-black">Create a New Blog</h2>
<form class="border border-2 border-teal-400 p-4 rounded new-project-form" id="new-blog-form">
  <div class="space-y-12">
    <div class="">
      <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-4">
          <label for="username" class="block text-sm font-medium leading-6 text-gray-900">Title</label>
          <div class="mt-2">
            <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
              <input type="text" name="project-name" id="project-title" class="form-input block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="title">
            </div>
          </div>
        </div>

        <div class="col-span-full">
          <label for="about" class="block text-sm font-medium leading-6 text-gray-900">Content</label>
          <div class="mt-2">
            <textarea id="project-desc" name="project-desc" rows="3" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 form-input"></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-6 flex items-center justify-end gap-x-6">
    <button type="submit" class=" btn btn-primary rounded-md bg-teal-500 px-6 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600">Create
    </button>
    <label for="openModal"  class="btn btn-primary rounded-md bg-black px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600">Cancel
      </label>
  </div>
</form>
    </div>
  </div>


<!-- CSS Styling -->
<style>
  /* Show modal when checkbox is checked */
  input:checked + div {
    display: flex;
  }
</style>


{{!-- WHERE THE BLOG LIST ARE DISPLAYED --}}
    {{#each blogPosts as |blogPost|}}
    <div class="px-3 padding-top: 2px;">
      <div class="row mb-4 project px-3 backgroundteal-500 w-1/2 flex justify-between items-center col-md-5 border border-strong border-black bg-teal-500 rounded px-10">
   <h2 class="text-xl">      
  <a href="/blogPost/{{blogPost.id}}" class="blog-title">{{blogPost.title}}
  </h2> 
  <span class="blog-date text-sm font-light">Posted by {{blogPost.user.name}} on {{format_date blogPost.date_created}}</span>
  </a>
</div>
    </div>
      
    {{/each}}
 


<div class="mt-6 flex items-center justify-center gap-x-6">
  <label for="openModal" 
    class="btn btn-primary rounded-md bg-black px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600 cursor-pointer">
    Add New Post
  </label>
</div>


<script src="/js/dashboard.js"></script>
