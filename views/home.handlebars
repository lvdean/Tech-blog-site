<h1>BLOGS</h1>
{{#each blogs as |blogPost| }}
  <div class="row mb-4 project">
    <div class="col-md-5">
      <h2>
        <!-- Use the blogPost.id for dynamic links -->
        <a href="/comment/{{blogPost.id}}">{{blogPost.title}}</a>
      </h2>
      <p>
        <!-- Correct the user name access -->
        Created by {{blogPost.user.name}} on {{format_date blogPost.date_created}}
      </p>
    </div>
    <div class="col-md-7">
      <p>{{blogPost.content}}</p>
    </div>
  </div>
{{/each}}

