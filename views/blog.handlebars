<div class="col-md-6 ">
    <h3>Current Projects:</h3>
  </div>
  <form class="border border-2 border-teal-400 p-4 rounded update-project-form" id="new-blog-form"data-id="{{id}}">
    <div class="row mb-2">
      <div class="col-md-8">
          <label for="username" class="block text-sm font-medium leading-6 text-gray-900">Title</label>
          <div class="mt-2">
            <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
              <input type="text" name="project-name" id="project-title" value="{{title}}" class="form-input block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 focus:ring-0 sm:text-sm sm:leading-6" placeholder="title">
            </div>
          </div>
        </div>
    <div class="col-span-full">
          <label for="about" class="block text-sm font-medium leading-6 text-gray-900">Content</label>
          <div class="mt-2">
            <textarea id="project-desc" name="project-desc" rows="3" class="block w-full rounded-md border-0 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 form-input"> {{content}}
            </textarea>
          </div>
      </div>

     
        <button type="button" class="delete-btn btn btn-sm btn-danger border border 3 border-black bg-teal-500"data-id="{{id}}">DELETE</button>
         <button type="button" class="update-btn  btn-sm border border 3 border-black bg-teal-500">UPDATE</button>
      
    </div>
  </form>



        
<script src="/js/blog.js"></script>
 